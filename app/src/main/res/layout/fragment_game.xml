<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#DBBBB6"
    android:persistentDrawingCache="animation"
    tools:context=".GameFragment">


    <Button
        android:id="@+id/buttonResign"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@android:color/transparent"
        android:paddingTop="10dp"
        android:text="@string/i_surender"
        android:textColor="#3A625D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="166dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:autoText="false"
        android:backgroundTint="@android:color/transparent"
        android:text="@string/new_game"
        android:textColor="#3A625D"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/myNumber"
        android:layout_width="183dp"
        android:layout_height="42dp"
        android:layout_marginTop="452dp"
        android:autofillHints=""
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#27009688"
        android:ems="10"
        android:foregroundTint="#673AB7"
        android:inputType="number"
        android:keyboardNavigationCluster="false"
        android:maxLength="4"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#14DA1C"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonResign"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_cornerbutons"
        android:includeFontPadding="false"
        android:keyboardNavigationCluster="false"
        android:text="@string/check"
        android:textColor="#E6CCBD"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newGameButton" />

    <TextView
        android:id="@+id/gameInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="serif"
        android:includeFontPadding="true"
        android:stateListAnimator="@android:anim/linear_interpolator"
        android:textColor="#0C0C0C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:constraint_referenced_ids="10do"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResign" />

    <TextView
        android:id="@+id/notificationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner"
        android:textColor="#EB0E0E"
        android:textColorHighlight="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/gameInfo"
        app:layout_constraintStart_toStartOf="@+id/gameInfo"
        app:layout_constraintTop_toBottomOf="@+id/buttonResign" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="#8D3636"
        android:backgroundTint="#9F2B2B"
        android:tint="#46B93232"
        app:layout_constraintStart_toStartOf="@+id/checkButton"
        app:layout_constraintTop_toTopOf="@+id/checkButton"
        app:srcCompat="@drawable/ic_baseline_vpn_key_24" />

    <TextView
        android:id="@+id/timeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#727483"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Enter 4-digit number :"
        android:textColor="#3A625D"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/myNumber"
        app:layout_constraintStart_toStartOf="@+id/myNumber" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="73dp"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_move_to_inbox_24"
        app:layout_constraintBottom_toTopOf="@+id/checkButton"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

